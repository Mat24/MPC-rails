<%= form_for @report, :html => { :class => 'form-horizontal' } do |f| %>
    <% status_hash = {'New' => '1', 'Verified' => '2', 'Approved' => '3', 'Declined' => '4', 'Refund' => '5', 'Chargeback' => '6', 'Cancelled' => '7' } %>
    <% descriptor_hash = {'EASTERNWESTERNWELLNESS' => '4', 'PAYPAL' => '5', 'SOFTHUBWEB 855.260.8641' => '2'} %>
    <% payment_hash = {'Visa' => '1', 'Mastercard' => '2', 'American Express' => '3', 'Discover' => '4', 'Paypal' => '5', 'Money Oreder' => '6', 'Bitcoin' => '7'} %>
    <% delivery_hash = {'Pre-shipment' => '1', 'In Transit' => '2', 'Delivered' => '3'}%>
    <% settled_hash = {'No' => '1','Yes' => '2'} %>
    <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:status,status_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descriptor, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:descriptor,descriptor_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:payment,payment_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :delivery, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:delivery,delivery_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :settled, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:settled,settled_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="control-group">
      <%= f.label :tracking_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :tracking_number, :class => 'text_field' %>
      </div>
  </div>
  <div class="control-group">
      <%= f.label :order_id, :class => 'control-label' %>
      <div class="row">
          <div class="controls col-lg-1">
            <%= f.text_field :order_id, :class => 'form-control' %>
          </div>
       </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reports_path, :class => 'btn' %>
  </div>
<% end %>
