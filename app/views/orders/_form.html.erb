<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
    <% shipping_origin_hash = {'India' => '1', 'USA' => '2'} %>
  <div class="col-md-6">
  <div class="form-group">
    <label for="first_name" class="control-label col-md-2">First Name</label>
    <div class="col-md-10">
      <%= f.text_field :firts_name, :id => 'first_name', :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="control-label col-md-2">Last Name</label>
    <div class="col-md-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="phone" class="control-label col-md-2">Phone</label>
    <div class="col-md-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="control-label col-md-2">E-mail</label>
    <div class="col-md-10">
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
  </div> 
   <div class="form-group">
    <label for="dob" class="control-label col-md-2">DOB</label>
    <div class="col-md-10">
      <%= f.date_select :dob, :order => [:month, :day, :year], start_year: 1928, end_year: 1996, :class => 'form-control' %>
    </div>
 </div> 
  <div class="form-group">
    <label for="address" class="control-label col-md-2">Address</label>
    <div class="col-md-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="city" class="control-label col-md-2">City</label>
    <div class="col-md-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="first_name" class="control-label col-md-2">State</label>
    <div class="col-md-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="zip" class="control-label col-md-2">Zip</label>
    <div class="col-md-10">
      <%= f.text_field :zip, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="country" class="control-label col-md-2">Country</label>
    <div class="col-md-10">
      <%= f.text_field :country, :class => 'form-control' %>
    </div>
 </div>
 <div class="form-group">
    <label for="billing_address" class="control-label col-md-2">Billing Address</label>
    <div class="col-md-10">
      <%= f.text_field :billing_address, :class => 'form-control' %>
    </div>
 </div>

</div><!--END FIRST COLUMN-->
 <div class="col-md-6">
 <div class="form-group">
    <label for="cc" class="control-label col-md-2">Card Number</label>
    <div class="col-md-10">
      <%= f.number_field :cc, :class => 'form-control' %>
    </div>
 </div>
 <div class="form-group">
    <label for="cvv" class="control-label col-md-2">CVV</label>
    <div class="col-md-10">
        <%= f.text_field :cvv, :class => 'form-control' %>
    </div>
 </div>
  <div class="form-group">
    <label for="exp_month" class="control-label col-md-2">Exp. Date</label>
    <div class="col-md-10">
        <% months = (1..12).to_a.sort! %>
        <%= f.select :exp_month, months %> / 
        <% years = (2014..2030).to_a.sort! %>
        <%= f.select :exp_year, years %>
    </div>
  </div>

   <div class="form-group">
    <label for="price" class="control-label col-md-2">Price</label>
    <div class="col-md-10">
      <%= f.text_field :price, :id => 'price', :class => 'form-control' %></div>
  </div>
    <div class="form-group">
    <label for="product" class="control-label col-md-2">Product</label>
    <div class="col-md-10">
      <%= f.text_field :product, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="qty" class="control-label col-md-2">Quantity</label>
    <div class="col-md-10">
      <%= f.number_field :qty, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="shipping_type" class="control-label col-md-2">Shipping</label>
    <div class="col-md-10">
      <%= f.select(:shipping_type,shipping_origin_hash, { :class => 'select-block mbn' }) %>
    </div>
  </div>
  <div class="form-group">
    <label for="comments" class="control-label col-md-2">Comments</label>
    <div class="col-md-10">
      <%= f.text_field :comments, :class => 'form-control' %>
    </div>
  </div> 
  <% if is_current_admin? %>
  <div class="form-group">
    <label for="user_id" class="control-label col-md-2">Affiliate</label>
    <div class="col-md-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
  <% end %>
 </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-xs btn-info' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-xs btn-danger' %>
  </div>
 </div><!--END SECOND COLUMN-->
<% end %>
